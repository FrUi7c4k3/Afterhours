<UserControl x:Class="MiX.AM.DT.Diagnostics.AssetViewer.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

	<Border Width="300" Height="150" BorderBrush="ForestGreen" BorderThickness="2" Background="White">
		<Border.Effect>
			<DropShadowEffect/>
		</Border.Effect>
		<controls:WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
			<TextBlock Text="DriveTime Admin"
									 FontSize="18" FontWeight="Bold" Margin="40,0,0,5"/>
			<TextBlock Text="Username: "
					   Width="70"  Padding="2" />
			<TextBox Name="UserName" 
						   Width="150" Margin="1"/>
			<TextBlock Text="Password: "
					   Width="70"  Padding="2" />
			<PasswordBox Name="Password" 
						 Width="150" Margin="1"/>
			<TextBlock Name="Error"
                       Foreground="Red" Height="20" Width="160"  Padding="2" />
			<Button Name="Login"
					Content="Login"
					Width="60"
					Margin="0,2,0,0"/>
		</controls:WrapPanel>
	</Border>
</UserControl>
